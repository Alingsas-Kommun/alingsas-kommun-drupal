  $blocks = array();
  $blocks['sidebar_bookmarks'] = array(
      'info' => t('AnvÃ¤ndernas Favoriter'),
      'status' => 1,
      'region' => 'sidebar_third',
      'weight' => 0,
      'visibility' => BLOCK_VISIBILITY_NOTLISTED,
      'pages' => '',
